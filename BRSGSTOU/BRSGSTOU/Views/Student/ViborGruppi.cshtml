@{
    ViewBag.Title = "Выбор группы";
    string Facultet_ID = Request.QueryString.Get(0);
}

<div class="ssilki">
    <p>@Html.ActionLink("Факультеты", "ViborFaculteta", "Student")</p>
    <img class="slesh" src="../../Content/slesh.png" />
    <p>@ViewBag.FacultetName</p>
    <img class="slesh" src="../../Content/slesh.png" />
    <p>Выберите группу:</p>
</div>



@{
    string gruppChar = "";
    foreach (var g in ViewBag.Gruppi)
    {
        string Gruppa = g.Name.ToString();
        int Gruppa_ID = g.ID;

        if (gruppChar == "" || gruppChar == Gruppa.Substring(0, Gruppa.IndexOf("-")))
        {
            <p style="float: left;">@Html.ActionLink(Gruppa, "ViborDisciplini", "Student", new { Facultet = Facultet_ID, Gruppa = Gruppa_ID }, new { @class = "fonSsilki" })</p>
        }
        else
        {
            <hr class="styletwo" />
            <p style="float: left;">@Html.ActionLink(Gruppa, "ViborDisciplini", "Student", new { Facultet = Facultet_ID, Gruppa = Gruppa_ID }, new { @class = "fonSsilki" })</p>
        }

        gruppChar = Gruppa.Substring(0, Gruppa.IndexOf("-"));
    }
}
