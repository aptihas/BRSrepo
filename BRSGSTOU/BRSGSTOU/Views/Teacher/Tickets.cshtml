    <br /><br />
    <div style="text-align:center;width:800px;">Подложка</div>
    @Html.TextBox("podlogka", "Подпись преподавателя___________________     Подпись заведующего кафедрой___________________", new { style = "width:800px;text-align:center;"})
    <br /><br />
    @Html.TextArea("ticketsList","", new { style = "width:800px;height:400px;",placeholder="Вопросы к билетам"})
    <br /><br />
    @Html.TextBox("ticketsCount", "", new { style = "width:130px;",placeholder="Число билетов", @onchange = "changeQ(this,100)" })
    <br /><br />
    @Html.TextBox("questionsCount", "", new {style="width:130px;",placeholder="Число вопросов",@onchange = "changeQ(this,10)"})
    <br /><br />
    <input type="submit" value="Создать вопросы" />
}
