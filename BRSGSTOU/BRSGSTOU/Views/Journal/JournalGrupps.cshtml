@{
    ViewBag.Title = "Группы";
}
@{string gruppa = "";}

<div class="ssilki">
    <p>@Html.ActionLink("Личный кабинет", "TeacherCabinet", "Teacher")</p>
    <img class="slesh" src="../../Content/slesh.png" />
    <p>Журнал преподавателя "@ViewBag.PrepodName"</p>
    <img class="slesh" src="../../Content/slesh.png" />
    <p>Выберите группу:</p>
</div>
@{string gruppChar = "";}
@foreach (BRSGSTOU.Models.TeachersData b in ViewBag.PrepodDisciplins)
{
    gruppa = b.Gruppa;
    if (gruppChar == "" || gruppChar == gruppa.Substring(0, gruppa.IndexOf("-")))
    {
    <p style="float: left;">@Html.ActionLink("Журнал " + gruppa, "JournalGruppsSubject", "Journal", new { Gruppa = b.Gruppa_ID }, new { @class = "fonSsilki" })</p>
    }
    else
    {
    <hr class="styletwo" />
    <p style="float: left;">@Html.ActionLink("Журнал " + gruppa, "JournalGruppsSubject", "Journal", new { Gruppa = b.Gruppa_ID }, new { @class = "fonSsilki" })</p>
    }
    gruppChar = gruppa.Substring(0, gruppa.IndexOf("-"));
}
